---
import BrowserChecker from "../components/BrowserChecker.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="it">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="shortcut icon" type="image/png" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <style is:global>
            @font-face {
                font-family: "IBM Plex Sans";
                src: url("../fonts/IBMPlexSans-Regular.otf");
                font-display: swap;
            }

            h1 {
                @apply text-5xl;
                @apply mb-4;
            }
            h2 {
                @apply text-3xl;
                @apply mb-3;
            }
            h3 {
                @apply text-2xl;
                @apply mb-2;
            }
            h4 {
                @apply text-xl;
                @apply mb-1;
            }

            p {
                @apply mb-2;
            }

            ol {
                @apply list-decimal;
                @apply list-inside;
                @apply mb-2;
            }

            a {
                text-decoration: underline;
                text-decoration-color: theme("colors.red");
                text-decoration-thickness: 10%;
            }

            *:focus-visible {
                outline-color: theme("colors.red");
            }

            body {
                accent-color: theme("colors.red");
                background-color: theme("colors.white");
                color: theme("colors.grey");
                font-family: "IBM Plex Sans", sans-serif;
                font-size: 18px;
                min-height: 100vh;
            }

            p {
                margin-bottom: theme("spacing.2");
            }
        </style>
    </head>
    <body>
        <BrowserChecker />
        <Header title={title} />
        <main>
            <div class="md:container md:mx-auto px-4 py-8" style="min-height: calc(100vh - 59px - 80px);">
                <slot />
            </div>
        </main>
        <Footer />
    </body>
</html>
